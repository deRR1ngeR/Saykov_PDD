<Page x:Class="Kursach.TicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TicketPage"
      Background="White">
    <Page.Resources>
        <Style TargetType="Button" x:Key="QstnBtn">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="10 0 0 0"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="ArialBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="StackPanel" x:Key="TrueAnswer">
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=btn, Path=is}"
                             Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="101*"/>
            <RowDefinition Height="196*"/>
            <RowDefinition Height="113*"/>
        </Grid.RowDefinitions>
        <!--Короче, кнопке ответа можно передевать через биндинг имя. Если в кнопке находится правильный
        ответ, её имя - а-ля трубатан, иначе фалсбатан. А по имени вызывать нужный тригер. -->
         <Label Content="Билет N" VerticalAlignment="Center" FontSize="15" Foreground="Red" FontFamily="Arial Bold" Height="26" />
       <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Width="600" >
            <Button Content="1" Style="{StaticResource QstnBtn}" x:Name="btn" />
            <Button Content="2" Style="{StaticResource QstnBtn}"/>
            <Button Content="3" Style="{StaticResource QstnBtn}"/>
            <Button Content="4" Style="{StaticResource QstnBtn}"/>
            <Button Content="5" Style="{StaticResource QstnBtn}"/>
            <Button Content="6" Style="{StaticResource QstnBtn}"/>
            <Button Content="7" Style="{StaticResource QstnBtn}"/>
            <Button Content="8" Style="{StaticResource QstnBtn}"/>
            <Button Content="9" Style="{StaticResource QstnBtn}"/>
            <Button Content="10" Style="{StaticResource QstnBtn}"/>
        </StackPanel>
        <TextBlock Grid.Row="1" Text="Test" Margin="35 15 45 15" FontSize="22" FontFamily="Times New Roman" TextWrapping="Wrap" />
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="449*"/>
                <ColumnDefinition Width="351*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="test" />
            <ListBox Grid.Column="1">
                <TextBlock Text="test"/>
            </ListBox>
        </Grid>
        <StackPanel Grid.Row="3" Background="#8ACC93" Visibility="Hidden" x:Name="TrueAnswer" Style="{StaticResource TrueAnswer}">
            <TextBlock HorizontalAlignment="Center" Margin="0 20 0 0" Text="Ваш ответ: " FontSize="22" FontFamily="Arial Bold"/>
            <TextBlock Text="ПРАВИЛЬНО" Foreground="White" FontSize="35" Margin="0 10 0 0" HorizontalAlignment="Center" FontFamily="Arial Bold"/>
        </StackPanel>
    </Grid>
    
</Page>
